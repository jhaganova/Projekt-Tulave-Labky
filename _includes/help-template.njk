                    </a>

                    <a href="/financna-pomoc/" class="no-decor">
                        <div class="button text__button help__button {{ activefinclass }}">
                            <p>Finančná pomoc</p>
                        </div>
                    </a>
                </div>




                {{ content | safe}}



                <div class="thankyou thankyou--with-text">
                    <picture>
                        <source media="(min-width: 700px)" srcset="/images/help-thankyou-text.jpg">
